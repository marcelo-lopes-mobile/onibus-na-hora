<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#03A9F4"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fabRota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_rota_fab"
        android:tint="@color/grey_80"
        app:backgroundTint="@color/grey_20"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/home_fabOnibus"
        app:layout_constraintEnd_toEndOf="@+id/home_fabOnibus"
        app:layout_constraintStart_toStartOf="@+id/home_fabOnibus"
        app:rippleColor="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fabPonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_ponto_fab"
        android:tint="@color/grey_80"
        app:backgroundTint="@color/grey_20"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/home_fabAdd"
        app:layout_constraintEnd_toEndOf="@+id/home_fabAdd"
        app:layout_constraintStart_toStartOf="@+id/home_fabAdd"
        app:rippleColor="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home_fabOnibus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_bus_fab"
        android:tint="@color/grey_80"
        app:backgroundTint="@color/grey_20"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/home_fabPonto"
        app:layout_constraintEnd_toEndOf="@+id/home_fabPonto"
        app:layout_constraintStart_toStartOf="@+id/home_fabPonto"
        app:rippleColor="@color/white" />

    <ListView
        android:id="@+id/listViewHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:listitem="@layout/item_lista" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Selecione uma rota"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>